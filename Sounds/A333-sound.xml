				<type>log</type>
				<factor>0.20</factor>
				<!--max>0.9</max-->

			</volume>
			<pitch>
				<property>/velocities/groundspeed-kt</property>
				<!--offset>0</offset-->
				<type>log</type>
				<factor>0.28</factor>
				<min>0.1</min>
				<max>1.5</max>
			</pitch>
			<type>avionics</type>
			<!--position>
				<x>22.5</x>
				<y>0</y>
				<z>0.78</z>
			</position-->
		</roll>
