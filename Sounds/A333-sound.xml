		<wind>
			<name>wind</name>
			<mode>looped</mode>
			<path>Aircraft/A330-300/Sounds/res/wind.wav</path>
			<property>/velocities/airspeed-kt</property>
			<volume>
				<property>/position/altitude-ft</property>
				<factor>-0.000015</factor>
				<offset>1.0</offset>
				<min>0.1</min>
				<max>1.0</max>
			</volume>
			<volume>
				<property>/velocities/airspeed-kt</property>
